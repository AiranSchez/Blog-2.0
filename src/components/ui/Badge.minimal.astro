---
// Minimal Badge - Zero overhead test version
export interface Props {
  variant?: 'default' | 'secondary' | 'outline' | 'muted';
  size?: 'sm' | 'md';
  class?: string;
}

const { variant = 'default', size = 'md', class: className = '' } = Astro.props;
---

{variant === 'default' && size === 'sm' && (
  <span class={`inline-flex items-center gap-1.5 rounded-full font-medium transition-colors duration-300 bg-stormy text-white text-xs px-2 py-0.5 ${className}`}>
    <slot />
  </span>
)}
{variant === 'muted' && size === 'sm' && (
  <span class={`inline-flex items-center gap-1.5 rounded-full font-medium transition-colors duration-300 bg-alabaster-200 dark:bg-carbon-700 text-carbon dark:text-alabaster text-xs px-2 py-0.5 ${className}`}>
    <slot />
  </span>
)}
{variant === 'outline' && size === 'sm' && (
  <span class={`inline-flex items-center gap-1.5 rounded-full font-medium transition-colors duration-300 border-2 border-stormy text-stormy bg-transparent text-xs px-2 py-0.5 ${className}`}>
    <slot />
  </span>
)}

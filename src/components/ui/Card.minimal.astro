---
// Minimal Card - Zero overhead test version
export interface Props {
  variant?: 'elevated';
  padding?: 'lg';
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`rounded-lg transition-all duration-300 bg-white dark:bg-carbon-700 shadow-md hover:shadow-lg border border-alabaster-200 dark:border-carbon-600 p-8 ${className}`}>
  <slot />
</div>

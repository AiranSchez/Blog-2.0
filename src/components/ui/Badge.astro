---
import { cn } from '@/logic/styles-merger';

interface Props {
  variant?: 'default' | 'secondary' | 'outline' | 'muted' | 'success' | 'warning' | 'error';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  role?: 'listitem' | 'status' | 'alert' | 'note';
}

const {
  variant = 'default',
  size = 'md',
  class: className,
  role,
  ...props
} = Astro.props;

// Simplified variant classes (no CVA overhead)
const variantClasses = {
  default: 'bg-stormy text-white',
  secondary: 'bg-seaweed text-white',
  outline: 'border-2 border-stormy text-stormy bg-transparent',
  muted: 'bg-alabaster-200 dark:bg-carbon-700 text-carbon dark:text-alabaster',
  success: 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100',
  warning: 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-100',
  error: 'bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-100',
};

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-3 py-1',
  lg: 'text-base px-4 py-1.5',
};
---

<span
  class={cn(
    'inline-flex items-center gap-1.5 rounded-full font-medium transition-colors duration-300',
    variantClasses[variant],
    sizeClasses[size],
    className
  )}
  role={role}
  {...props}
>
  <slot />
</span>

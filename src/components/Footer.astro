---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
// import { Github, Linkedin, Twitter, Send, Mail } from '@lucide/astro';
import Link from './ui/Link.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

// Social links configuration
const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/yourusername',
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>`,
    label: t('footer.social.github') || 'Visit GitHub profile',
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/yourusername',
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2z"/><circle cx="4" cy="4" r="2" stroke-width="2"/></svg>`,
    label: t('footer.social.linkedin') || 'Visit LinkedIn profile',
  },
  {
    name: 'X',
    href: 'https://twitter.com/yourusername',
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/></svg>`,
    label: t('footer.social.twitter') || 'Visit X (Twitter) profile',
  },
  {
    name: 'Telegram',
    href: 'https://t.me/yourusername',
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m22 2-7 20-4-9-9-4 20-7z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 2 11 13"/></svg>`,
    label: t('footer.social.telegram') || 'Contact via Telegram',
  },
  {
    name: 'Email',
    href: 'mailto:your.email@example.com',
    icon: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><rect width="20" height="16" x="2" y="4" rx="2" stroke-width="2"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`,
    label: t('footer.social.email') || 'Send an email',
  },
];

// Navigation sections
const navigationSections = [
  {
    title: t('footer.nav.main') || 'Navigation',
    links: [
      { href: `/${lang}/`, label: t('nav.home') || 'Home' },
      { href: `/${lang}/blog/`, label: t('nav.blog') || 'Blog' },
    ],
  },
];
---

<footer class="bg-carbon dark:bg-carbon-900 text-alabaster border-t border-carbon-700 dark:border-carbon-800">
  <div class="container-custom py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
      <!-- Brand & Description -->
      <div class="space-y-4">
        <h2 class="text-2xl font-bold text-seaweed">
          Airán Sanchez
        </h2>
        <p class="text-sm text-alabaster-400 max-w-xs">
          {t('footer.description') || 'Software developer passionate about creating modern, accessible web experiences.'}
        </p>
      </div>

      <!-- Navigation Links -->
      {navigationSections.map((section) => (
        <div class="space-y-4">
          <h3 class="text-sm font-semibold uppercase tracking-wider text-muted">
            {section.title}
          </h3>
          <nav aria-label={section.title}>
            <ul class="space-y-2">
              {section.links.map((link) => (
                <li>
                  <Link
                    href={link.href}
                    variant="subtle"
                    class="text-sm text-alabaster-300 hover:text-seaweed transition-colors"
                    showExternalIcon={false}
                  >
                    {link.label}
                  </Link>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      ))}

      <!-- Social Links -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold uppercase tracking-wider text-muted">
          {t('footer.social') || 'Connect'}
        </h3>
        <nav aria-label={t('footer.social') || 'Social media links'}>
          <ul class="flex flex-wrap gap-3">
            {socialLinks.map((social) => (
              <li>
                <a
                  href={social.href}
                  target={social.href.startsWith('mailto') ? undefined : '_blank'}
                  rel={social.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
                  aria-label={social.label}
                  class="flex items-center justify-center w-10 h-10 rounded-lg bg-carbon-700 hover:bg-stormy dark:bg-carbon-800 dark:hover:bg-stormy text-alabaster hover:text-white transition-all duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-stormy ring-offset-2 ring-offset-carbon touch-manipulation group"
                >
                  <span class="group-hover:scale-110 transition-transform" set:html={social.icon} />
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-carbon-700 dark:border-carbon-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-alabaster-400">
        <p>
          © {currentYear} Airán Sanchez. {t('footer.rights') || 'All rights reserved.'}
        </p>
        
        <div class="flex items-center gap-4">
          <p class="flex items-center gap-2">
            <span>{t('footer.madeWith') || 'Made with'}</span>
            <span class="text-red-500" aria-label="love">❤️</span>
            <span>{t('footer.using') || 'using'}</span>
            <Link
              href="https://astro.build"
              variant="subtle"
              class="text-seaweed hover:text-muted transition-colors font-medium"
            >
              Astro
            </Link>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>


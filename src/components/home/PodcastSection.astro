---
import PodcastGrid from '../podcast/PodcastGrid.tsx';
import type { PodcastEpisode } from '../../types/podcast';

interface Props {
  episodes: PodcastEpisode[];
  t: (key: any) => string;
  lang: string;
}

const { episodes, t, lang } = Astro.props;
---

<section class="podcast-section py-12 sm:py-20">
  <div class="container mx-auto px-4 sm:px-6 max-w-7xl transition-colors relative">
    <PodcastGrid episodes={episodes} client:load />
  </div>
</section>

<style>
  .podcast-section {
    background: linear-gradient(to bottom, transparent, rgba(var(--color-carbon-900-rgb, 17, 17, 19), 0.03), transparent);
  }
  
  :global(.dark) .podcast-section {
    background: linear-gradient(to bottom, transparent, rgba(var(--color-seaweed-rgb, 132, 204, 191), 0.02), transparent);
  }

  :global(.podcast-grid) {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
